{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "jsx": "react",
    "jsxFactory": "React.createElement"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
