{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "jsx": "react",
    "jsxFactory": "React.createElement"
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "src/index.ts",
    "./src/**/*.d.ts",
    "src"
  ],
  "exclude": ["node_modules"]
}
